{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./server/src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./server/src/*"],
      "@repo/llm": ["../fin-cast/packages/llm/src/index.ts"]
    }
  },
  "include": ["server/src/**/*"],
  "exclude": ["node_modules", "dist"]
}